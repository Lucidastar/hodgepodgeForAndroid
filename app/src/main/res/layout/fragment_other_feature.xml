<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.lucidastar.hodgepodge.ui.fragment.OtherFeatureFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Button
            android:id="@+id/btn_study_handler"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Handler的学习"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/btn_study_other"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="其他的学习"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/btn_study_bitmap"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="bitmap的学习"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/btn_study_aidl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="AIDL的学习"
            android:textAllCaps="false" />
        <Button
            android:id="@+id/btn_study_fragment_dialog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="FragmentDialog"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/btn_study_custom_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="学习自定义控件"
            android:textAllCaps="false" />
    </LinearLayout>
</android.support.v4.widget.NestedScrollView>
