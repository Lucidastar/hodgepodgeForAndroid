<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             xmlns:app="http://schemas.android.com/apk/res-auto"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
              android:orientation="vertical"
             tools:context="com.lucidastar.hodgepodge.ui.fragment.OtherFeatureFragment">

   <Button
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:text="Handler的学习"
       android:textAllCaps="false"
       android:id="@+id/btn_study_handler"
       />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="其他的学习"
        android:textAllCaps="false"
        android:id="@+id/btn_study_other"
        />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="bitmap的学习"
        android:textAllCaps="false"
        android:id="@+id/btn_study_bitmap"
        />

</LinearLayout>
