<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.lucidastar.hodgepodge.ui.activity.otherfeature.animation.AnimationActivity">
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:layout_collapseMode="pin"
        android:background="?attr/colorPrimary"
        app:popupTheme="@style/AppTheme.PopupOverlay" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="属性动画"
        android:onClick="openPropertyAnim"
        />
    <ImageView
        android:id="@+id/iv_test"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:src="@drawable/forself"
        android:scaleType="centerCrop"
        android:background="@color/black_sub"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <TextView
            android:id="@+id/tv_imageInfo"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="@color/black"
            />
        <CheckBox
            android:id="@+id/cb_change"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="反向"
            android:layout_gravity="center_vertical"
            />
    </LinearLayout>
    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="scrollX"
                android:background="@color/colorHintError"
                android:textColor="@color/white"
                android:padding="2dp"
                />
            <android.support.v7.widget.AppCompatSeekBar
                android:id="@+id/sb_scrollX"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:max="100"
                style="@style/Base.Widget.AppCompat.SeekBar"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:background="@color/black_sub"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="scrollY"
                android:background="@color/colorHintError"
                android:textColor="@color/white"
                android:padding="2dp"
                />
            <android.support.v7.widget.AppCompatSeekBar
                android:id="@+id/sb_scrollY"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:max="100"
                style="@style/Base.Widget.AppCompat.SeekBar"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:background="@color/black_sub"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="translationX"
                android:background="@color/colorHintError"
                android:textColor="@color/white"
                android:padding="2dp"
                />
            <android.support.v7.widget.AppCompatSeekBar
                android:id="@+id/sb_translationX"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:max="100"
                style="@style/Base.Widget.AppCompat.SeekBar"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:background="@color/black_sub"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="translationY"
                android:background="@color/colorHintError"
                android:textColor="@color/white"
                android:padding="2dp"
                />
            <android.support.v7.widget.AppCompatSeekBar
                android:id="@+id/sb_translationY"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:max="100"
                style="@style/Base.Widget.AppCompat.SeekBar"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:background="@color/black_sub"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="rotationX"
                android:background="@color/colorHintError"
                android:textColor="@color/white"
                android:padding="2dp"
                />
            <android.support.v7.widget.AppCompatSeekBar
                android:id="@+id/sb_rotationX"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:max="100"
                style="@style/Base.Widget.AppCompat.SeekBar"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:background="@color/black_sub"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="rotationY"
                android:background="@color/colorHintError"
                android:textColor="@color/white"
                android:padding="2dp"
                />
            <android.support.v7.widget.AppCompatSeekBar
                android:id="@+id/sb_rotationY"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:max="100"
                style="@style/Base.Widget.AppCompat.SeekBar"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:background="@color/black_sub"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="scaleX"
                android:background="@color/colorHintError"
                android:textColor="@color/white"
                android:padding="2dp"
                />
            <android.support.v7.widget.AppCompatSeekBar
                android:id="@+id/sb_scaleX"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:max="100"
                style="@style/Base.Widget.AppCompat.SeekBar"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:background="@color/black_sub"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="scaleY"
                android:background="@color/colorHintError"
                android:textColor="@color/white"
                android:padding="2dp"
                />
            <android.support.v7.widget.AppCompatSeekBar
                android:id="@+id/sb_scaleY"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:max="100"
                style="@style/Base.Widget.AppCompat.SeekBar"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:background="@color/black_sub"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="pivotX"
                android:background="@color/colorHintError"
                android:textColor="@color/white"
                android:padding="2dp"
                />
            <android.support.v7.widget.AppCompatSeekBar
                android:id="@+id/sb_pivotX"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:max="100"
                style="@style/Base.Widget.AppCompat.SeekBar"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:background="@color/black_sub"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="pivotY"
                android:background="@color/colorHintError"
                android:textColor="@color/white"
                android:padding="2dp"
                />
            <android.support.v7.widget.AppCompatSeekBar
                android:id="@+id/sb_pivotY"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:max="100"
                style="@style/Base.Widget.AppCompat.SeekBar"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:background="@color/black_sub"/>
        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>

</LinearLayout>
